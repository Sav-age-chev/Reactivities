/* TypeScript file */
{
  "compilerOptions": {
    "target": "es5",             // JavaScript version - relevantly old but compatible with most browsers
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                                  // keep it strict will prevent from making stupid mistakes
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"                   // gives type safety inside the jsx
  },
  "include": [
    "src"
  ]
}
